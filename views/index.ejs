<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles.css" />
    <title>Mini Message Board</title>
  </head>
  <body>
    <nav>
      <ul class="flex px-1">
        <li class="mx-1"><a href="/">Index</a></li>
        <li class="mx-1"><a href="/new">New Message</a></li>
      </ul>
    </nav>
    <main>
      <div>
        <% if (messages.length > 0) { %> <% messages.forEach(message => {%>
        <div>
          <h5><%= message.user %></h5>
          <p><%= message.date %></p>
        </div>
        <p><%= message.text %></p>
        <% })%> <% } %>
      </div>
    </main>
  </body>
</html>
